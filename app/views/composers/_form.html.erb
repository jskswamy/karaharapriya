<%= form_for composer, :remote => true do |f| %>

  <div class="left">

    <div class="header">
      <%= t :composer %>
    </div>

    <div class="body">

      <div class="section">
        <div class="title">
          <%= f.label :name, t(:name) %>
        </div>
        <div class="input">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="section">
        <div class="title">
          <%= f.label :century, t(:century) %>
        </div>
        <div class="input">
          <%= f.text_field :century %>
        </div>
      </div>

    </div>

    <div class="footer">
      <div class="error" data-error-display="true">
      </div>
    </div>

  </div>

  <div class="right">

    <div class="flash_notice" data-error-info="true">
    </div>

    <div>
      <div class="section">
        <h2><%= f.label :info, t(:info) %></h2>
      </div>
      <div class="section editor">
        <%= f.text_area :info, :class => "rich_editor" %>
      </div>
    </div>

    <%= submit_tag t(:submit) %>

  </div>

  <div class="clear"></div>

<% end %>
